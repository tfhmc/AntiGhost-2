{
    "schemaVersion": 1,
    "id": "antighost",
    "version": "${version}",
    "environment": "client",
    "entrypoints": {
        "client": [ "de.guntram.mcmod.antighost.AntiGhost" ]
    },
    "mixins": [ "antighost.mixins.json" ],
    "custom": {
        "modupdater": {
            "strategy": "json",
            "url": "https://raw.githubusercontent.com/gbl/ModVersionInfo/master/AntiGhost.json"
        }
    },
    "depends": {
        "fabric-api": "*"
    },
    "recommends": {
        "modmenu" : "*"
    },
    "name": "AntiGhost",
    "description": "Mod that helps you get rid of ghost blocks around yourself. Use /ghost or type the g key (can be rebound) to request block-resends.",
    "icon": "icon.png",
    "authors": [
        "tfhmc",
        "Giselbaer",
        "IkyMax" ],
    "contact": {
        "homepage": "https://modrinth.com/mod/antighost-2",
        "sources": "https://github.com/tfhmc/AntiGhost-2",
        "issues": "https://github.com/tfhmc/AntiGhost-2/issues"
    }
}
